                        label.col-sm-2.control-label(for='tanggal_lulus')
                            |   Tanggal Lulus
                            span.required *
                        .col-sm-10
                            input#title.form-control(type='date', name='tgl_lulus', placeholder='Masukkan Tanggal Lulus', required='required')
                            br 
                    .form-group
                        label.col-sm-2.control-label(for='tempat_lahir')
                            |   Tempat Lahir
                            span.required *
