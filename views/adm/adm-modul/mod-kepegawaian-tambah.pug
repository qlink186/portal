.row
    .col-md-12
        .box.box-info
            .box-header
                h3.box-title
                    |   Tambah Pegawai
            // /.box-header
            .box-body.pad
                form(action="/adm-kepegawaian-tambah", method="post")
                    .form-group
                        label.col-sm-2.control-label(for='nip')
                            |   NIP
                            span.required *
                        .col-sm-10
                            input#title.form-control(type='text', name='nip', placeholder='Masukkan NIP', required='required')
                            br
                    .form-group
                        label.col-sm-2.control-label(for='nip')
                            |   NIK
                            span.required *
                        .col-sm-10
                            input#title.form-control(type='text', name='nik', placeholder='Masukkan NIK', required='required')
                            br
                    .form-group
                        label.col-sm-2.control-label(for='nama')
                            |   Nama
                            span.required *
                        .col-sm-10
                            input#title.form-control(type='text', name='nama', placeholder='Masukkan Nama', required='required')
                            br
                    .form-group
                        label.col-sm-2.control-label(for='gelar_depan')
                            |   Gelar Depan
                            span.required *
                        .col-sm-10
                            input#title.form-control(type='text', name='gelar_depan', placeholder='Masukkan Gelar Depan', required='required')
                            br
                    .form-group
                        label.col-sm-2.control-label(for='gelar_belakang')
                            |   Gelar Belakang
                            span.required *
                        .col-sm-10
                            input#title.form-control(type='text', name='gelar_belakang', placeholder='Masukkan Gelar Belakang', required='required')
                            br
                    .form-group
                        label.col-sm-2.control-label(for='idodp')
                            |   OPD
                            span.required *
                        .col-sm-10
                            select.form-control(required='required', placeholder='Pilih OPD', name='id_opd')
                                    each val in opd
                                        option(value=(val.id_opd))=val.nama_opd
                            br 
                    .form-group
                        label.col-sm-2.control-label(for='jk')
                            |   Jenis Kelamin
                            span.required *
                        .col-sm-10
                            select.form-control(required='required', placeholder='Pilih Jenis Kelamin', name='jk')
                                option(value='P') Perempuan
                                option(value='L') Laki-laki
                            br     
                    .form-group
                        label.col-sm-2.control-label(for='kawin')
                            |   Status Perkawinan
                            span.required *
                        .col-sm-10
                            select.form-control(required='required', placeholder='Pilih Status Perkawinan', name='kawin')
                                option(value='N') Belum Menikah
                                option(value='Y') Sudah Menikah  
                            br
                    .form-group
                        label.col-sm-2.control-label(for='agama')
                            |   Agama
                            span.required *
                        .col-sm-10
                            select.form-control(required='required', placeholder='Pilih Agama', name='agama')
                                    each val in agama
                                        option(value=(val.id_agama))=val.agama
                            br 
                    .form-group
                        label.col-sm-2.control-label(for='alamat')
                            |   Alamat
                            span.required *
                        .col-sm-10
                            input#title.form-control(type='text', name='alamat', placeholder='Masukkan Alamat', required='required')
                            br 
                    .form-group
                        label.col-sm-2.control-label(for='alamat_rt')
                            |   Alamat RT
                            span.required *
                        .col-sm-10
                            input#title.form-control(type='text', name='alamat_rt', placeholder='Masukkan Alamat RT', required='required')
                            br
                    .form-group
                        label.col-sm-2.control-label(for='alamat_rw')
                            |   Alamat RW
                            span.required *
                        .col-sm-10
                            input#title.form-control(type='text', name='alamat_rw', placeholder='Masukkan Alamat RW', required='required')
                            br
                    .form-group
                        label.col-sm-2.control-label(for='status_pegawai')
                            |   Alamat Kota
                            span.required *
                        .col-sm-10
                            select.form-control(required='required', placeholder='Pilih Kategori', name='alamat_kota')
                                    each val in kotakab
                                        option(value=(val.id_kotakab))=val.kotakab
                            br  
                    .form-group
                        label.col-sm-2.control-label(for='status_pegawai')
                            |   Alamat Kecamatan
                            span.required *
                        .col-sm-10
                            select.form-control(required='required', placeholder='Pilih Kategori', name='alamat_kec')
                                    each val in kec
                                        option(value=(val.id_kec))=val.kec
                            br  
                    .form-group
                        label.col-sm-2.control-label(for='status_pegawai')
                            |   Alamat Kelurahan
                            span.required *
                        .col-sm-10
                            select.form-control(required='required', placeholder='Pilih Kategori', name='alamat_kel')
                                    each val in kel
                                        option(value=(val.id_kel))=val.kel
                            br  
                    .form-group
                        label.col-sm-2.control-label(for='golongan_darah')
                            |   Golongan Darah
                            span.required *
                        .col-sm-10
                            select.form-control(required='required', placeholder='Pilih Golongan darah', name='gol_darah')
                                option(value='A') A
                                option(value='B') B
                                option(value='AB') AB
                                option(value='O') O
