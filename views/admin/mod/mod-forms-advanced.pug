    rd_class = 'iradio_' + style + (skin.length ? ("-" + skin) : '');
    {
    cb_class = cb_class.replace('-' + skin, '');
    rd_class = rd_class.replace('-' + skin, '');
    }
    $('input.icheck-2').iCheck('destroy');
    $('input.icheck-2').iCheck({
    checkboxClass: cb_class,
    radioClass: rd_class
    });
    }
