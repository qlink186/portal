// Add "fixed" class to make the sidebar fixed always to the browser viewport.
// Adding class "toggle-others" will keep only one menu item open at a time.
// Adding class "collapsed" collapse sidebar root elements and show only icons.
.sidebar-menu.toggle-others.fixed
    .sidebar-menu-inner
        header.logo-env
            // logo
            .logo
                a.logo-expanded(href=base_url+'adm')
                    img(src=base_url+'images/logo_title_w_icon_200.png', width='200', alt='')
                a.logo-collapsed(href=base_url+'adm')
                    img(src=base_url+'images/lambang_40.png', width='40', alt='')
            // This will toggle the mobile menu and will be visible only on mobile devices
            .mobile-menu-toggle.visible-xs
                a(href='#', data-toggle='user-info-menu')
                    i.fa-bell-o
                    span.badge.badge-success 7
                a(href='#', data-toggle='mobile-menu')
                    i.fa-bars
        // Sidebar User Info Bar - Added in 1.3
        section.sidebar-user-info
            .sidebar-user-info-inner
                a.user-profile(href=base_url+'adm-setting-profile')
                    img.img-circle.img-corona.superadmin(src=base_url+'images/pegawai/small/198804102015031001.jpg', alt='user-pic')
