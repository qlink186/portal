h5.subpage-title
    span Gallery Terbaru
    // Controls
    span#gallery-next.next
        i.fa-chevron-right
    span#gallery-prev.prev
        i.fa-chevron-left
    a.btn-xs.btn-flat.flat-danger.pull-right.geserkanan(href=base_url+'gallery')
        span GALLERY LAINNYA

script(type='text/javascript').
    $(document).ready(function(){
        $.ajax({
            url: '#{api_url}gallery',
            dataType: "json",
            success: function(data) {
                $.each(data.gallery,function(key,row){
                    var id_gallery = row["id_gallery"];
                    var judul_gambar = row["judul_gambar"];
                    var thumb = row["alamat_file_thumb"];
                    var small = row["alamat_file_small"];
                    var big = row["alamat_file_big"];
                    var tgl_gambar = row["tgl_gambar"];
                    $('#gallery-caroufredsel').append('<div class="col-xs-12 col-sm-4 col-md-2 galleryhome-wrapper">'
                    +   '<div class="galleryhome-item">'
                    +       '<div class="galleryhome-thumb">'
                    +           '<img class="img-responsive" src="'+thumb+'" alt="'+judul_gambar+'" />'
                    +           '<div class="image-overlay"></div>'
                    +           '<a class="galleryhome-zoom" rel="prettyPhoto[pp_gal_home]" href="'+big+'">'
                    +               '<i class="fa-eye" />'
                    +           '</a>'
                    +           '<a class="galleryhome-link" href="'+big+'" target="_BLANK" >'
                    +               '<i class="fa-link" />'
                    +           '</a>'
                    +       '</div>'
                    +       '<div class="galleryhome-content">'
                    +           '<h5>'+judul_gambar+'</h5>'
                    +           '<span>'+tgl_gambar+'</span>'
                    +       '</div>'
                    +   '</div>'
                    +'</div>');
                    $("a[rel^='prettyPhoto']").prettyPhoto({
                        theme: 'light_square',
                        social_tools: false
                    });
                });
            }//end data return. 
        });
    });

