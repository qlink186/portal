.white-wrapper
    .container
        .row
            .col-md-9
                h5.subpage-title
                    span=arSiaranPers.judul
                    //a.btn-xs.btn-flat.flat-danger.pull-right(href=base_url+'berita')
                        span BERITA LAINNYA
                .post
                    .post-thumb-single
                        img.img-responsive(src=arSiaranPers.alamat_file_big, alt=arSiaranPers.judul)
                        .image-overlay
                        a.post-zoom(href=arSiaranPers.alamat_file_big, rel='prettyPhoto[pp_siaran_pers_single]')
                            i.fa-eye
                    // /.post-thumb-single
                    .post-content(style='margin-top:20px')
                        h4.text-center
                            strong=arSiaranPers.judul
                        h4.text-center Nomor : #{arSiaranPers.no_pengumuman} 
                        h5.text-center Tanggal : #{arSiaranPers.tgl_tulis} 
                        p!=arSiaranPers.isi
                        
                    // /.post-content
                    .post-meta
                        ul.meta-list
                            li
                                span Terbit: 
                                span.black=arSiaranPers.tgl_terbit
                            li
                                span Instansi:
                                span.black=arSiaranPers.opd
                            //li
                                a.read-more(href=base_url+'pengumuman')
                                    i.fa-arrow-left 
                                    span  Pengumuman Lainnya
                // /.article
            .col-md-3
                include mod-sidebar-1