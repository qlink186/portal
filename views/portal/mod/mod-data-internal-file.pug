                    script(type='text/javascript').
                        var oTable;
                        jQuery(document).ready(function($)
                        {
                            'use strict';
                            function jen_inf(filterVal, columnVal) {
                                var found;
                                if (columnVal === '') {
                                    return true;
                                }
                                switch (filterVal) {
                                case 'SM':
                                    found = columnVal.search(/SM/g);
                                    break;
                                case 'SS':
                                    found = columnVal.search(/SS/g);
                                    break;
                                case 'DK':
                                    found = columnVal.search(/DK/g);
                                    break;
                                case 'BK':
                                    found = columnVal.search(/BK/g);
                                    break;
                                case 'HU':
                                    found = columnVal.search(/HU/g);
                                    break;
                                default:
                                    found = 1;
                                    break;
                                }
                        
                                if (found !== -1) {
                                    return true;
                                }
                                return false;
                            }
                            oTable = $("#table-download-area").dataTable(
                            {
                                "bJQueryUI": true,
                                "bStateSave": true,
