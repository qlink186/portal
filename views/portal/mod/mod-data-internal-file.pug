                                tableTools: {
                                    sSwfPath: "#{base_url}adm-assets/js/datatables/tabletools/copy_csv_xls_pdf.swf"
                                },
                                "ajax": {
                                    "url": '#{base_url}api/dataopd',
                                    "dataSrc": "download"
                                },
                                "columns": [
                                    {
                                        "searchable": false,
                                        "class":"hidden-xs",
                                        "render": function ( data, type, row ){
                                            var format_file = row["format_file"];
                                            return '<img class="img-responsive center-block" src="#{base_url}adm-assets/images/ico/'+format_file+'.svg" />';
                                        },
                                        "targets": 0
                                    },
                                    {
                                        "searchable": true,
                                        "render": function ( data, type, row ){
                                            var link_file = row["link_file"];
                                            var nama_file = row["nama_file"];
                                            var deskripsi_file = row["deskripsi_file"];
                                            var jenis_file = row["jenis_file"];
                                            var kategori_dip = row["kategori_dip"];
                                            var tgl_file = row["tgl_file"];
                                            var format_file = row["format_file"];
                                            return '<table class="table table-condensed"><tbody><tr><td colspan="3"><a class="lead" href="#{base_url}data-download/'+link_file+'" /><img class="img-responsive center-block visible-xs" src="#{base_url}adm-assets/images/ico/'+format_file+'.svg" width="75px" /><br class="visible-xs" />'+nama_file+'</td></tr><tr><td class="visible-xs">Deskripsi</td><td class="visible-xs">:</td><td class="visible-xs">'+deskripsi_file+'</td><td class="hidden-xs">'+deskripsi_file+'</td></tr><tr class="visible-xs"><td>Jenis Dokumen</td><td>:</td><td>'+jenis_file+'</td></tr><tr class="visible-xs"><td>Jenis Informasi</td><td>:</td><td><div class="label label-secondary">'+kategori_dip+'</div></td></tr><tr class="visible-xs"><td>Tanggal Dokumen</td><td>:</td><td>'+tgl_file+'</td></tr><tr class="visible-xs"><td colspan="3"><a class="btn btn-red btn-xs btn-icon btn-icon-standalone pull-right" href="#{base_url}data-download/'+link_file+'"/><i class="fa-download"></i><span>Download Dokumen ('+format_file+')</span></td></tr></tbody></table>';
                                        },
                                        "targets": 1
                                    },
                                    { "data": "jenis_file", "class":"hidden-xs text-center" },
                                    {
                                        "searchable": true,
                                        "class":"hidden-xs text-center",
                                        "render": function ( data, type, row ){
                                            var kat_dip = row["kat_dip"];
                                            return '<div class="label label-secondary">'+kat_dip+'</div>';
                                        },
                                        "targets": 3
                                    },
                                    { "data": "tgl_file", "class":"hidden-xs text-center" },
                                    {
                                        "searchable": false,
                                        "class":"hidden-xs",
                                        "render": function ( data, type, row ){
