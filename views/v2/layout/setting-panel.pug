.settings-pane
    a(href='#', data-toggle='settings-pane', data-animate='true')
    .settings-pane-inner
        .row
            .col-md-4
                .user-info
                    .user-image
                        a(href='extra-profile.html')
                            img.img-responsive.img-circle(src='assets/images/user-2.png')
                    .user-details
                        h3
                            a(href='extra-profile.html') John Smith
                            // Available statuses: is-online, is-idle, is-busy and is-offline
                            span.user-status.is-online
